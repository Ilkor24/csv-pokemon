<div class="container text-center">
  <a href="/" style="font-size: 2.125rem;">CsvDex<a>

  <div class="m-5" >
      <%= form_tag(pokemons_path, method: :get, data: { controller: "searching", searching_target: "form" }) do %>
      <%= text_field_tag(:query, params[:query], placeholder: "Entre un nom de Pokemon", data: { action: "input->searching#submit", searching_target: "input" }) %>
      <%= submit_tag("Search") %>
    <% end %>
  </div>
  <p class="mt-5">Si tu veux exporter tes pokémons, clique sur la Pokéball à droite de l'écran </p>
  <%= render "pokecard" %>
</div>
